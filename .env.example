# Anthropic API Configuration
# Get your API key from: https://console.anthropic.com/
ANTHROPIC_API_KEY=sk-ant-xxxxx
ANTHROPIC_MODEL=claude-haiku-4.0

# Twilio Configuration
# Get credentials from: https://console.twilio.com/
TWILIO_ACCOUNT_SID=ACxxxxx
TWILIO_AUTH_TOKEN=xxxxx
TWILIO_PHONE_NUMBER=+1234567890
# Comma-separated list of recipient phone numbers
RECIPIENT_PHONE_NUMBERS=+1234567891,+1234567892

# Application Settings
DEBUG=False
LOG_LEVEL=INFO
MAX_CONCURRENT_CHECKS=5
SCRAPER_TIMEOUT=30
AI_TIMEOUT=10

# Configuration File Paths
COURSES_CONFIG_PATH=config/courses.yaml
PROFESSORS_CONFIG_PATH=config/professors.yaml

# Optional: Scheduler Settings (Future Enhancement)
ENABLE_SCHEDULER=False
DEFAULT_CHECK_INTERVAL=3600
