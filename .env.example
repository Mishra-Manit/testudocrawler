# Anthropic API Configuration
# Get your API key from: https://console.anthropic.com/
ANTHROPIC_API_KEY=sk-ant-xxxxx
ANTHROPIC_MODEL=claude-haiku-4.0

# Twilio WhatsApp Configuration
# Get credentials from: https://console.twilio.com/
TWILIO_ACCOUNT_SID=ACxxxxx
TWILIO_AUTH_TOKEN=xxxxx

# WhatsApp Sandbox Setup:
# 1. Go to https://console.twilio.com/us1/develop/sms/try-it-out/whatsapp-learn
# 2. Send "join <your-code>" to the sandbox number from your WhatsApp
# 3. Copy the sandbox number below (e.g., +14155238886)
TWILIO_WHATSAPP_NUMBER=+14155238886

# Your WhatsApp number (must join sandbox first)
RECIPIENT_WHATSAPP_NUMBER=+1234567890

# Application Settings
DEBUG=False
LOG_LEVEL=INFO
MAX_CONCURRENT_CHECKS=5
SCRAPER_TIMEOUT=30
AI_TIMEOUT=10

# Configuration File Paths
COURSES_CONFIG_PATH=config/courses.yaml
PROFESSORS_CONFIG_PATH=config/professors.yaml

# Optional: Scheduler Settings (Future Enhancement)
ENABLE_SCHEDULER=False
DEFAULT_CHECK_INTERVAL=3600

# Logfire Observability
# Get your token from: https://logfire.pydantic.dev/
LOGFIRE_TOKEN=your_token_here
